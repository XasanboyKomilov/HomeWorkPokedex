<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/frame_bg">

    <TextView
        android:id="@+id/pokemonNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#024"
        android:textColor="@color/pikachu_clr"
        app:layout_constraintEnd_toEndOf="@+id/pokemonImg"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pokemonImg"
        android:layout_width="104dp"
        android:layout_height="80dp"
        android:src="@drawable/aron"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pokemonNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pokemonName"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_bg"
        android:backgroundTint="@color/pikachu_clr"
        android:gravity="center"
        android:text="Pikachu"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/pokemonImg"
        app:layout_constraintStart_toStartOf="@+id/pokemonImg"
        app:layout_constraintTop_toBottomOf="@+id/pokemonImg" />

</androidx.constraintlayout.widget.ConstraintLayout>